}
.charmove.noclick,
#player1 .charmove,
.unable .charmove,
.stunned .charmove,
.unable.charmove,
.oncd,
.noChakra,
.dead img
{
    filter: grayscale(0.8);
    border-color: #000 !important;
}
.unable .player > section > section img,
.stunned .player > section > section img
{
    filter: grayscale(0.8);
}
.player > section > div > div > span {
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    color: #fff;
    text-align: center;
    margin-top: -1em;
    font-size: 3em;
    -webkit-text-stroke: 2px rgba(0, 0, 0, 0.8);
}
#player0 {
    left: 25px;
    text-align: left;
}
#player1 {
    right: 25px;
    text-align: right;
}
#player1 .player > section > section img {
    transform: rotateY(180deg);
}
.charhealth {
    height: 8px;
    margin-top: -12px;
    background: #111;
    border: 2px solid #111;
    width: 297px;
    position: relative;
}
#player1 .charhealth {
    margin-right: 77px;
    margin-left: auto;
}
#player0 .charhealth {
    margin-left: 77px;
    margin-right: auto;
}
.charhealth div {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    background: #0a0;
    transition: all 1s;
}
.chardefense, .charbarrier {
    width: 0;
    border: 2px solid #000;
    margin: -2px 0;
    transition: 0.1s border;
}
.charhealth .chardefense {
    background: #08b;
    z-index: 2;
}
.charhealth .charbarrier {
    background: #e00;
}
#player1 .chardefense, #player1 .charbarrier {
    border-right: none;
}
#player0 .chardefense, #player0 .charbarrier {
    border-left: none;
}
.exposed .chardefense {
    background: #999;
}
.chardefense:hover {
    transition: none;
    border-color: #00a;
}
.charbarrier:hover {
    transition: none;
    border-color: #a00;
}
.charhealth span {
    z-index: 2;
    font-size: 9px;
    color: #fff;
    position: absolute;
    top: -1px;
    transition: all 1s;
    left: 0;
    right: 0;
    margin: 0 -2em;
}
#player1 .charhealth span {
    right: 100%;
}
#player0 .charhealth span {
    left: 100%;
}
#player1 .charhealth div {
    right: 0;
}
#player0 .charhealth div {
    left: 0;
}
