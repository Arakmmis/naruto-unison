    margin-left: 0.2em;
    margin-right: 0;
    font-size: 0.75em;
}

#charSelect {
    max-width: 942px;
    position: relative;
    margin: auto;
    height: 100%;
}

#searching {
    border-radius: 100%;
    width: 160px;
    height: 160px;
    position: absolute;
