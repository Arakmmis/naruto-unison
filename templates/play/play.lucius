}

body {
    background: url('/img/bg/silhouette.jpg') no-repeat center center !important;
    overflow: hidden;
}
.controls {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 10px;
}

.nextSkill, .prevSkill {
    font-size: 15px;
