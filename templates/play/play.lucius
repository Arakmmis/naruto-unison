@media (max-width: 1065px) {
    #player1 .charmove {
        display: none;
    }
    #player1 .charhealth {
        margin-right: 0 !important;
        width: 75px;
        z-index: 10;
    }
    #player1 {
        width: 200px;
    }
    #playqueuecont, #playchakra {
        top: 635px;
    }
    #playqueuecont {
        margin: 0 0 0 25px !important;
    }
    #playchakra {
        left: 100px;
    }
    #endgame {
        top: 678px;
    }
    #top > article {
        left: 100px;
        right: 100px;
    }
    #top > section {
        width: 100px;
    }
    #top > section > section {
        display: none;
    }
