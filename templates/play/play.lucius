@media (max-width: 830px) {
    a.playButton {
        font-size: 0.8em;
    }
    #userBox {
        font-size: 0.9em;
        width: 240px;
    }
    a.playButton::before {
        content: none;
    }
}
@media (max-width: 760px) {
    #userBox {
        width: 160px;

        .userimg {
            display: none;
        }
    }
}
@media (max-width: 680px) {
    #userBox {
        font-size: 0.85em;
        width: 150px;
    }
    a.playButton::after {
        content: none;
    }
}
@media (max-width: 620px) {
    a.playButton {
        font-size: 0.6em;
    }
    #userBox {
        font-size: 0.7em;
        width: 116px;
    }
}
@media (max-height: 770px) {
    #characterButtons {
        bottom: 5px;
        height: 173px;

        .char {
            width: 50px;
            height: 50px;
        }
    }

    #charSelect {
        > article {
            bottom: 200px;
            font-size: 0.7em;

            .char {
                width: 40px;
                height: 40px;
            }

            > p {
                min-height: revert;
            }

            > section > p {
                min-height: 28px;
            }
        }

        h3 img.char {
            width: 50px;
            height: 50px;
        }

        > header {
            padding-top: 5px;
        }
    }
}

@media (max-width: 560px) {
    a.playButton {
        font-size: 0.7em;
        height: 10px;
        line-height: 0.8em;
    }

    #characterButtons {
        height: 104px;
        bottom: 10px;

        nav {
            display: none;
        }

        .char {
            width: 45px;
            height: 45px;
        }
    }

    #charScroll {
        overflow-y: scroll;
    }

    #charSelect {
        margin: 0 10px;

        > article {
            font-size: 0.7em;
            bottom: 150px;

            .char {
                height: 30px;
                width: 30px;
            }
        }

        h3 {
            font-size: 14px;

            img.char {
                width: 40px;
                height: 40px;
            }
        }

        > header {
            padding-top: 0;
            margin-top: -5px;
        }
    }
    h4, #charSelect > article .skillClasses {
        font-size: 0.8em;
    }

    .select img {
        width: 60px;
        height: 60px;
    }

    #userBox, #underTeam {
        display: none;
    }

    #volume {
        top: 100px;
    }
}
