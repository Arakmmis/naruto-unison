td {
    vertical-align: bottom;
    padding-bottom: 1em;
    position: relative;
    bottom: 1em;
}

td:first-child, th:first-child {
    width: 100%;
}

td:last-child div:last-child {
    color: #606060;
}

td:first-child, th:first-child, td:last-child, th:last-child {
    text-align: left;
    position: initial;
}

td:first-child, th:first-child {
    padding-left: 1em;
}

td:last-child, th:last-child {
    padding-left: 3em;
    min-width: 17em;
}

