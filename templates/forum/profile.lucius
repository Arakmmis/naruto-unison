p {
  margin-top: 0;
  margin-bottom: 0.25em;
}
.char {
  width: 50px;
}
.char.avatar {
  margin: 1em 0 0 2px;  
  width: initial;
  outline-width: 2px;
}
.row {
  padding: 0.75em 1em 0 2.5em !important;
}
.row:last-child {
  padding: 0 0 1em !important;
}
.team {
  margin-top: 3px;
  width: 77px;
  display: flex;
  margin-left: 1px;
}
.team img {
  outline-color: #333 !important;
  margin: 0;
}
p.label {
  font-weight: initial;
  text-decoration: underline;
}
#content > section {
  flex-grow: 0;
  padding: 0;
  padding-left: 1em;
} 
