<header>
  <h1>#{boardName board}
  <p>#{boardDesc board}
<table>
  <thead>
    <tr>
      <th>
        <h3>
          Topic
          <a href=@{NewTopicR board}>
            +New
      <th>
        Posts
      <th>
        Latest Post
  <tbody>
    $forall topic <- topics
      <tr>
        <td>
          <header>
            <h4>
              ^{Link.topic topic}
            <div>
              by
              ^{Link.user $ citeAuthor topic}
        <td>
          #{topicPosts $ citeVal topic}
        <td>
          ^{Link.user $ citeLatest topic}
          at
          ^{timestamp $ topicTime $ citeVal topic}
